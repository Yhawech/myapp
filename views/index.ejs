<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Aggregator</title>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            text-align: center;
        }

        header {
            background: #333;
            color: white;
            padding: 15px;
        }

        header a {
            color: white;
            margin: 0 10px;
            text-decoration: none;
            font-weight: bold;
        }

        form {
            margin: 20px 0;
        }

        input, button {
            padding: 10px;
            font-size: 16px;
            margin: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        button {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

        .news-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }

        .news-article {
            width: 300px;
            background: white;
            margin: 15px;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .news-article img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 5px;
        }

        .news-article h2 {
            font-size: 18px;
            margin: 10px 0;
        }

        .bias-label {
            color: white;
            font-weight: bold;
            padding: 5px;
            border-radius: 5px;
            display: inline-block;
        }

        .fake-news {
            background-color: #ff0000;
            color: white;
            padding: 5px;
            border-radius: 5px;
            font-weight: bold;
        }

        .no-news {
            font-size: 20px;
            color: red;
            font-weight: bold;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <header>
        <h1>üì∞ News Aggregator</h1>
        <nav>
            <a href="/">Home</a>
        </nav>
    </header>

    <!-- Search Bar -->
    <form action="/search" method="GET">
        <input type="text" name="search" placeholder="Search news..." required>
        <button type="submit">üîç Search</button>
    </form>

    <!-- News by Date -->
    <form action="/news-by-date" method="GET">
        <input type="date" name="date" required>
        <button type="submit">üìÖ Search by Date</button>
    </form>

    <!-- News Articles -->
    <div class="news-container">
        <% if (news.length === 0) { %>
            <p class="no-news">‚ö†Ô∏è No news articles found.</p>
        <% } else { %>
            <% news.forEach(article => { %>
                <div class="news-article">
                    <a href="<%= article.url %>" target="_blank">
                        <img src="<%= article.image %>" alt="News Image">
                    </a>
                    <h2><a href="<%= article.url %>" target="_blank"><%= article.title %></a></h2>
                    <p><%= article.description || "No description available." %></p>
                    <p><strong>Source:</strong> <%= article.source %></p>
                    <p><strong>Published Date:</strong> <%= article.publishedAt || "Unknown" %></p>
                    
                    <!-- Bias Label -->
                    <p class="bias-label" style="background-color: <%= article.biasColor %>;">
                        Bias: <%= article.biasType === "Neutral" ? "Independent" : article.biasType %> - <%= article.biasLevel %>
                    </p>

                    <!-- Fake News Warning -->
                    <% if (article.isFake) { %>
                        <p class="fake-news">‚ö†Ô∏è Warning: This article may be fake news.</p>
                    <% } %>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>
